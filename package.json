{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm build:core && pnpm build:ui",
    "dev": "pnpm -F jige-core build-dev && pnpm dev:ui",
    "doc": "pnpm -F docs dev",
    "pub:ui": "pnpm build:core && pnpm build:ui && pnpm -F jige-ui publish -r",
    "dev:ui": "pnpm -F jige-ui dev",
    "build:ui": "pnpm -F jige-ui build",
    "build:core": "pnpm -F jige-core build",
    "clean": "pnpm exec rimraf ./packages/**/node_modules ./apps/**/node_modules node_modules pnpm-lock.yaml --glob",
    "lint": "npx ultracite lint",
    "lint:error": "pnpm exec biome check --diagnostic-level error",
    "lint:fix": "npx ultracite format",
    "tc:core": "pnpm -F jige-core type-check",
    "tc:ui": "pnpm -F jige-ui type-check",
    "tc": "pnpm tc:core && pnpm tc:ui",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.3.0",
    "husky": "^9.1.7",
    "ultracite": "5.1.2"
  }
}
