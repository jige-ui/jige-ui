{
  "name": "monorepo",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm -F jige-core build-dev && pnpm dev:ui",
    "doc": "pnpm -F docs dev",
    "dev:ui": "pnpm -F jige-ui dev",
    "clean": "pnpm exec rimraf ./packages/**/node_modules ./apps/**/node_modules node_modules pnpm-lock.yaml --glob",
    "lint": "pnpm dlx ultracite@latest check",
    "lint:error": "pnpm dlx ultracite@latest check --diagnostic-level error",
    "lint:fix": "pnpm dlx ultracite@latest fix",
    "tc:core": "pnpm -F jige-core type-check",
    "tc:ui": "pnpm -F jige-ui type-check",
    "tc": "pnpm tc:core && pnpm tc:ui"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.3.0",
    "ultracite": "6.3.10"
  }
}
